<!--ThesaurusDetailPage.wxml-->
<view class="table">
<text>pages/thesaurus/detail/ThesaurusDetailPage.wxml</text>

<text 
class='tab_name'
 wx:for="{{option}}" data-tab_index="{{index}}" 
data-tab_name="{{item}}"

  bindtap="changeNavBar">{{item}}</text>
<view class="list" wx:for="{{list}}" >
      <view >
        <text class="list-title" bind:tap="click_word"   hidden="{{currentTab==2&item.hiddenAnswer}}" data-text="{{item.word}}">{{item.word}}</text>
        <image data-word="{{item.word}}"   bind:tap="playAudio"  class="trumpet_style" src="../../images/icon_trumpet.png"></image>
      </view>
      <view  hidden="{{currentTab!=0&item.hiddenAnswer}}"  class="list-content">{{item.phonetic}}</view>
      <view hidden="{{currentTab==1&item.hiddenAnswer}}"  class="list-content">{{item.mean}}</view>
      <view hidden="{{currentTab!=0&item.hiddenAnswer}}" class="list-content">{{item.eg}}</view>
      <!-- <view>hidden="{{item.hiddenAnswer}}"  </view> -->
      <view    wx:for="{{item.cl_image_list}}" wx:for-item="item_src_image" class="list-content">
        <image hidden="{{currentTab!=0& item.hiddenAnswer}}"  id="word_image"  bindtap="clickImage"
        mode="aspectFit" data-src-list="{{item.cl_image_list}}"  data-src="{{item_src_image}}" src="{{item_src_image}}"></image>
      </view>

      <view class="line"></view>
    </view>
</view>

